<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
  </div>

  <div>
    <%= f.label :content %><br>
    <%= f.text_area :content %><br>
  </div>

  <div>
    <%= f.label :user_id %><br>
    <%= f.collection_select :user_id, User.all, :id, :name, {:prompt => "Select a User"}, {id: "user_id"} %><br><br>
  </div>

  <div>
    <%= f.label :tag_id %><br>
    <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %>
  </div>



  <div class="actions">
    <%= f.submit %>
  </div>


<% end %>
